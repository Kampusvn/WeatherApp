<!-- Hoàn thành (31) Xóa layout cũ -->
<!-- Hoàn thành (35) Bao layout mới bằng <layout/> tags để làm việc với data binding -->
<layout xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Hoàn thành (34) Tạo LinearLayout để chứa 2 layout có kích cỡ bằng nhau-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<!-- Hoàn thành (32) Include primary_weather_info layout -->
        <include
            android:id="@+id/primary_info"
            layout="@layout/primary_weather_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

<!-- Hoàn thành (33) Include extra_weather_details layout -->
        <include
            android:id="@+id/extra_details"
            layout="@layout/extra_weather_details"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>
</layout>