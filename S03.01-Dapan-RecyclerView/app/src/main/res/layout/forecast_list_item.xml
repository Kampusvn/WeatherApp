<!--COMPLETED (6) Đặt view gốc là LinearLayout theo hướng dọc-->
<!--COMPLETED (7) Đặt width của LinearLayout là match_parent và height là wrap_content-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--COMPLETED (8) Thêm TextView với id là @+id/tv_weather_data-->
    <!--COMPLETED (9) Đặt text size bằng 22sp-->
    <!--COMPLETED (10) Đặt width và height là wrap_content-->
    <!--COMPLETED (11) Đặt padding của TextView là 16dp-->
    <TextView
        android:id="@+id/tv_weather_data"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"/>

    <!--COMPLETED (12) Thêm View vào layout với width là match_parent và height bằng 1dp-->
    <!--COMPLETED (13) Đặt màu nền là #dadada-->
    <!--COMPLETED (14) Đặt margins trái phải là 8dp-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dadada"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

</LinearLayout>