<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_weather_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="20sp" />
    </ScrollView>

    <!--Hoàn thành (2) Thêm TextView nếu có lỗi xảy ra-->
    <!--Hoàn thành (3) Thiết lập width và height là wrap_content-->
    <!--Hoàn thành (4) Cung cấp cho TextView một thông báo lỗi mặc định cho biết đã xảy ra lỗi (sử dụng strings.xml)-->
    <!--Hoàn thành (5) Set the default visibility of the TextView to invisible-->
    <TextView
        android:id="@+id/tv_error_message_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/error_message"
        android:textSize="20sp"
        android:visibility="invisible" />

    <!--Hoàn thành (12) Thêm ProgressBar để người dùng biết rằng nội dung đang được tải-->
    <!--Hoàn thành (13) Thiết lập width và height cho ProgressBar bằng 42dp-->
    <!--Hoàn thành (14) Đặt layout_gravity cho ProgressBar là center-->
    <!--Hoàn thành (15) Đặt default visibility của ProgressBar là invisible-->
    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        android:layout_height="42dp"
        android:layout_width="42dp"
        android:layout_gravity="center"
        android:visibility="invisible" />

</FrameLayout>